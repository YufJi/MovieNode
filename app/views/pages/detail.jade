extends ../layout

block content
	.container
		.row
			.col-xs-12.col-md-7
				.vedio
					<iframe width="100%" height=300 frameborder=0 src="/media/#{movie.flash}.mp4" allowfullscreen></iframe>
				.panel.panel-default
					.panel-heading
						h3 评论区
			.col-xs-12.col-md-5
				dl.dl-horziontal
					dt 电影名称
					dd #{movie.title}
					dt 导演
					dd #{movie.doctor}
					dt 国家
					dd #{movie.country}
					dt 语言
					dd #{movie.language}
					dt 上映年份
					dd #{movie.year}
					dt 简介
					dd #{movie.summary}
					//-dt 地址
					//-dd #{movie.flash}
	script(src='/js/detail.js')
